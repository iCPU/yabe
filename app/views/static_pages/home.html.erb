<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/search_form' %>
      </section>
    </aside>
  
    <div class="span8">
      <h3>Recent Searches</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="span8">
    <%= link_to "Sign in now!", signin_path, 
                                class: "btn btn-large btn-primary pull-left" %>
  </div>
<% end %> 
