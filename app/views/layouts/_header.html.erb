<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Yabe", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-left">
          <% if signed_in? %>
	    <li><a href="<%= root_path %>"><%= gravatar_for current_user, size: 20 %> Welcome <%= current_user.name %>,</a></li>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Search History", current_user %></li>
            <li><%= link_to "Edit Account", edit_user_path(current_user) %></li>
          <% end %>
          
          <% if signed_in? && current_user.admin? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "View All Users", users_path %></li>
              </ul>
            </li>
          <% end %>
          
	  <% if signed_in? %>
	    <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
	  <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
